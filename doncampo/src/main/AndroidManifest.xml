        <activity
            android:name=".RestfulActivity"
            android:label="@string/title_activity_restful"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".NewStockForm"
            android:label="@string/title_activity_new_stock_form"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".actions_elements"
            android:label="@string/title_activity_actions_elements"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".SearchActivity"
            android:label="@string/title_activity_search"
