<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.cool4code.doncampoapp.IntroActivity"
    android:background="#FFE8BB">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:id="@+id/intro_imagen_logo"
        android:src="@drawable/logo"
        android:layout_above="@+id/intro_boton_ir_home"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="34dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Â¡Del campo a tu casa, al toque!"
        android:id="@+id/intro_texto_slogan"
        android:layout_marginBottom="117dp"
        android:gravity="center_horizontal"
        android:textColor="#ec4b48"
        android:textStyle="bold"
        android:layout_above="@+id/intro_boton_ir_home"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Iniciar"
        android:id="@+id/intro_boton_ir_home"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/intro_texto_slogan"
        android:layout_alignEnd="@+id/intro_texto_slogan"
        android:background="#669900"
        android:textColor="#ffffffff" />
</RelativeLayout>
