<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cool4code.doncampoapp.ClientSecurityActivity"
    android:background="#ffe8bb">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="150dp"
        android:id="@+id/imageView"
        android:src="@drawable/farmerred"
        android:layout_below="@+id/farmer_login_button_singup"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="85dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Acceso de usuarios"
        android:id="@+id/farmers_text_topheader"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal|fill_vertical"
        android:autoText="true"
        android:background="#669900"
        android:textColor="#ffffffff"
        android:textSize="17dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/farmer_login_dni"
        android:maxLength="13"
        android:layout_below="@+id/farmers_text_topheader"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:hint="No. identificación" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberPassword|number"
        android:ems="10"
        android:maxLength="4"
        android:id="@+id/farmer_login_pass"
        android:layout_below="@+id/farmer_login_dni"
        android:layout_alignLeft="@+id/farmer_login_dni"
        android:layout_alignStart="@+id/farmer_login_dni"
        android:hint="Clave" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:text="Ingresar"
        android:id="@+id/farmer_login_button"
        android:layout_below="@+id/farmer_login_pass"
        android:layout_alignLeft="@+id/farmer_login_pass"
        android:layout_alignStart="@+id/farmer_login_pass"
        android:layout_alignRight="@+id/farmer_login_pass"
        android:layout_alignEnd="@+id/farmer_login_pass"
        android:background="#669900"
        android:textColor="#ffffffff"
        android:textSize="15dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="¿No tienes cuenta?"
        android:id="@+id/farmer_login_button_singup"
        android:layout_below="@+id/farmer_login_button"
        android:layout_alignRight="@+id/farmer_login_button"
        android:layout_alignEnd="@+id/farmer_login_button"
        android:textColor="#ffffffff"
        android:layout_marginTop="5dp"
        android:textSize="15dp"
        android:layout_alignLeft="@+id/farmer_login_button"
        android:layout_alignStart="@+id/farmer_login_button"
        android:background="#ff4444" />



</RelativeLayout>
