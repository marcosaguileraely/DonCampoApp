<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.cool4code.doncampoapp.SingUp"
    android:background="#ffe8bb">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:paddingTop="40dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:weightSum="1">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:maxLength="50"
            android:id="@+id/register_name"
            android:layout_gravity="center_horizontal"
            android:hint="Nombre completo" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/register_dni"
            android:maxLength="13"
            android:layout_gravity="center_horizontal"
            android:hint="No. identificación" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:maxLength="13"
            android:ems="10"
            android:id="@+id/register_phone"
            android:layout_gravity="center_horizontal"
            android:hint="No. movil" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:maxLength="50"
            android:ems="10"
            android:id="@+id/register_email"
            android:layout_gravity="center_horizontal"
            android:hint="E-mail" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:maxLength="100"
            android:id="@+id/register_address"
            android:hint="Dirección domicilio" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Tips sobre la clave:\nUsa 4 digítos como clave."
            android:id="@+id/tips_clave"
            android:layout_gravity="center_horizontal"
            android:background="#ff4444"
            android:textColor="#fff"
            android:padding="3dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberPassword|number"
            android:ems="10"
            android:maxLength="4"
            android:id="@+id/register_pass"
            android:layout_gravity="center_horizontal"
            android:hint="Clave" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberPassword|number"
            android:ems="10"
            android:maxLength="4"
            android:id="@+id/register_repass"
            android:layout_gravity="center_horizontal"
            android:hint="Re-clave" />


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical|center_horizontal|bottom">

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Registrarme"
                android:id="@+id/fire_ws"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="#ff4444"
                android:textColor="#fff"
                android:layout_weight="0.05" />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
