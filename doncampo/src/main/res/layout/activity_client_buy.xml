<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.cool4code.doncampoapp.ClientBuy"
    android:background="#ffe8bb"
    android:id="@+id/BuyMainLayout">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:id="@+id/buy_layout_container">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="¡Casi hemos terminado! \n\nPor favor ingresa la información solicitada para completar la compra y contactarte con el productor."
            android:id="@+id/buy_section_title"
            android:layout_gravity="center_horizontal" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="10dp"
            android:paddingTop="35dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/buy_complete_name"
                android:maxLength="50"
                android:layout_gravity="center_horizontal"
                android:hint="Nombre completo" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone|number"
                android:ems="10"
                android:maxLength="15"
                android:id="@+id/buy_phone"
                android:layout_gravity="center_horizontal"
                android:hint="No. movil" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone|number"
                android:ems="10"
                android:maxLength="10"
                android:id="@+id/buy_qty"
                android:layout_gravity="center_horizontal"
                android:hint="Cantidad a comprar" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="¡Confirmar compra!"
                android:id="@+id/buy_buyButton"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="25dp"
                android:background="#ec4b48"
                android:textColor="#ffffff" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
