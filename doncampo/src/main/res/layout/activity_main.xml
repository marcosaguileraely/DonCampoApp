<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.cool4code.doncampoapp.MainActivity"
    android:background="#ffe8bb">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="¿Quién soy?"
        android:id="@+id/home_text_encabezado"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:textColor="#669900"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:id="@+id/home_img_farmer"
        android:layout_marginTop="45dp"
        android:src="@drawable/home_farmer2_"
        android:layout_below="@+id/textView8"
        android:layout_alignLeft="@+id/home_img_client"
        android:layout_alignStart="@+id/home_img_client" />

    <ImageView
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:id="@+id/home_img_client"
        android:src="@drawable/home_farmer1_new"
        android:layout_below="@+id/home_img_farmer"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Seleccione un modo de acceso"
        android:id="@+id/textView8"
        android:layout_below="@+id/home_text_encabezado"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center|left"
        android:gravity="center_horizontal" />

</RelativeLayout>
