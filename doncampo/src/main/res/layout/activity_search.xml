<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cool4code.doncampoapp.SearchActivity">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/search_product"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:hint="Nombre del producto"/>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/search_productListView"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/search_product"
        android:choiceMode="singleChoice"
        android:layout_above="@+id/relativeLayout" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#0099CC"
        android:id="@+id/relativeLayout">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">

            <Button
                android:layout_width="185dp"
                android:layout_height="wrap_content"
                android:text="   Soy Usuario   "
                android:drawableRight="@android:drawable/ic_menu_compass"
                android:id="@+id/search_home_ingresar"
                android:textColor="#ffffff"
                android:textSize="14dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:background="#0099cc" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Soy Nuevo"
                android:drawableRight="@android:drawable/ic_menu_add"
                android:id="@+id/search_home_registro"
                android:textSize="14dp"
                android:textColor="#ffffff"
                android:layout_alignTop="@+id/search_home_ingresar"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_toRightOf="@+id/search_home_ingresar"
                android:background="#0099cc" />

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
